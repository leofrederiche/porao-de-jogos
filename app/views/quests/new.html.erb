<div class="container" style="margin-top: 50px;">
  <h1>Nova quest</h1>


  <div class="panel panel-default well">
  <div class="panel-body">

    <%= form_for @new_quest, url: new_quest_path do |quest| %>
      <label for="inputPassword3" class="col-sm-2 control-label">Nome da miss√£o</label>
      <p><%= quest.text_field :name, class: "form-control" %></p>

      <label for="inputPassword3" class="col-sm-2 control-label">Requisitos</label>
      <p><%= quest.text_field :requirements, class: "form-control" %></p>

      <label for="inputPassword3" class="col-sm-2 control-label">Objetivo</label>
      <p><%= quest.text_field :objective, class: "form-control" %></p>

      <label for="inputPassword3" class="col-sm-2 control-label">Recompensa</label>
      <p><%= quest.text_field :reward, class: "form-control" %></p>
      
      <p><%= quest.submit "Adicionar quest", class: "btn btn-default" %></p>
    <% end %>

  </div>
</div>