<div class="panel panel-default well" style="margin-top: 70px; padding: 2px; border-left: none; border-right: none; border-radius: 0px;">
  <div class="panel-body">

    <h3 style="float:left; top: -15px; position:relative;"><span class="label label-info">Info</span> Para cada conquista, uma miss√£o. <small>Adicione uma quest para este game.</small></h3>

    <%= link_to new_quest_path(@game.id) do  %>
      <button type="button" class="btn btn-primary" style="float:right;">Add nova quest</button>
    <% end %>

  </div>
</div>

<div class="container" style="margin-top: 50px;">
  <table>
    <ul>
      <% @quests.reverse.each do |quest| %>
      <li><h3><b><%= quest.name %></b></h3></li>
      <p><%= quest.objective %></p>
      <b>Recompensa:</b> <small><%= quest.reward %></small>
      <br><br>
      <% end %>
    </ul>
  </table>
</div>